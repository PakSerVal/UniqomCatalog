{% extends 'base.html.twig' %}
{% block body %}
    <div class="header">Редактирование автомобиля</div>

    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                {{ form_start(form, {method: 'POST', action: path('edit_car', {carId: car.id})}) }}
                <fieldset>
                    <div class="form-group">
                        {{ form_widget(form) }}
                        <input type="submit" value="Редактировать" class="btn btn-primary">
                    </div>
                </fieldset>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
